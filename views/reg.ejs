<%- include header.ejs%>

    <div class="panel panel-default">
        <div class="panel-body">
            <form class="form form-horizontal" method="post">
                <fieldset>
                    <legend>用户注册</legend>
                    <div class="form-group">
                        <label for="username" class="control-label col-md-2 col-sm-12">用户名</label>
                        <input type="text" class="form-control-static col-md-2 col-sm-12" name="username" id="username"/>
                        <!--<p class="center-block">*您的账户名，用于登录和显示。</p>-->
                    </div>

                    <div class="form-group">
                        <label for="password" class="control-label col-md-2 col-sm-12">输入密码</label>
                        <input type="password" class="form-control-static col-md-2 col-sm-12" name="password" id="password"/>
                    </div>
                    <div class="form-group">
                        <label for="password-repeat" class="control-label col-md-2 col-sm-12">重复输入密码</label>
                        <input type="password" class="form-control-static col-md-2 col-sm-12" name="password-repeat" id="password-repeat"/>
                    </div>
                    <div class="form-group">
                        <label for="email" class="control-label col-md-2 col-sm-12">邮箱</label>
                        <input type="text" class="form-control-static col-md-2 col-sm-12" name="email" id="email"/>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-primary">注册</button>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>

    <footer>
        <p><a href="http://www.haines.com/" target="_blank">haines</a> 2016</p>
    </footer>

<%- include footer.ejs%>