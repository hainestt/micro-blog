<div class="clearfix"></div>
<% post.comments.forEach(function(comment,index){%>
<div class="media">
    <!--<a class="pull-left" href="#">-->
        <!--<img class="media-object" src=""-->
             <!--alt="媒体对象">-->
    <!--</a>-->
    <div class="media-body">
        <h4 class="media-heading"><a href="<%= comment.website %>"><%= comment.name%></a></h4>
        <span> 回复于：<%=post.title %></span>
        <p><%- comment.content%></p>
    </div>
</div>
<%})%>
<hr/>

<div class="col-md-5">
<form method="post" class="form-horizontal" action="/u/<%=post.name%>/<%=post.time.day%>/<%=post.title%>">

    <% if(user){%>
    <div class="form-group">
        <label for="name">姓名：</label>
        <input type="text" name="name" id="name" value="<%=user.name %>"  class="form-control" />
    </div>
    <div class="form-group">
        <label  for="email">邮箱：</label>
        <input type="text" name="email" id="email" value="<%=user.email %>"  class="form-control" />
    </div>
    <div class="form-group">
        <label  for="website">网址：</label>
        <input type="text" name="website" id="website" value="/u/<%=user.name %>"  class="form-control" />
    </div>
    <%}else{%>
    <div class="form-group">
        <label  for="name">姓名：</label>
        <input type="text" name="name" id="name"  class="form-control" />
    </div>
    <div class="form-group">
        <label for="email">邮箱：</label>
        <input type="text" name="email" id="email" class="form-control" />
    </div>
    <div class="form-group">
        <label  for="website">网址：</label>
        <input type="text" name="website" id="website" value="http://"  class="form-control" />
    </div>

    <%}%>

    <div class="form-group">
        <label for="content">留言：</label>
            <textarea name="content" id="content" class="form-control" rows="5" cols="80">
            </textarea>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-info btn-block ">提  交</button>
    </div>
</form>

</div>
<br/>
